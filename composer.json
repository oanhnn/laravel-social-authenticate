{
  "name": "oanhnn/laravel-social-credentials",
  "type": "library",
  "description": "Easy integrate Laravel Socialite into Laravel 5.5+ Application",
  "keywords": [
    "laravel",
    "package",
    "socialite",
    "social-login",
    "login",
    "oauth"
  ],
  "license": "MIT",
  "homepage": "https://github.com/oanhnn/laravel-social-credentials",
  "support": {
    "issues": "https://github.com/oanhnn/laravel-social-credentials/issues",
    "source": "https://github.com/oanhnn/laravel-social-credentials"
  },
  "authors": [
    {
      "name": "Oanh Nguyen",
      "email": "oanhnn.bk@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Laravel\\SocialCredentials\\": "src/"
    }
  },
  "require": {
    "php": "^7.1.3",
    "illuminate/contracts": "^5.5|^6.0",
    "illuminate/database": "^5.5|^6.0",
    "illuminate/support": "^5.5|^6.0",
    "laravel/socialite": "^3.0|^4.0"
  },
  "require-dev": {
    "guzzlehttp/guzzle": "^6.0",
    "orchestra/testbench": "^3.5|^4.0",
    "phpunit/phpunit": "^6.3|^7.0|^8.0",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "scripts": {
    "test": [
      "phpunit --testdox --testsuite=Tests"
    ],
    "coverage": [
      "phpunit --coverage-html storage/coverage --testsuite=Tests"
    ],
    "cs-check": [
      "phpcs --standard=phpcs.xml.dist"
    ],
    "cs-fix": [
      "phpcbf --standard=phpcs.xml.dist"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "extra": {
    "laravel": {
      "providers": [
        "Laravel\\SocialCredentials\\ServiceProvider"
      ]
    }
  }
}
